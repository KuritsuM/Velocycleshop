<h1>Последние лоты наших пользователей:</h1>
<div class="post-index-container">
  <% @posts.each do |post| %>
    <div class="post-image">
      <% media_presenter = PostMediaPresenter.new(post) %>
      <%= media_presenter.make_tag %>
    </div>
    <div class="post-utility">
      <div class="author-info">
        <%= link_to image_tag(post.user.avatar, class: "author-avatar"), profile_path(id: post.user.id) %>
        <%= link_to post.user.username, profile_path(id: post.user.id) %>
      </div>
    </div>
  <% end %>
</div>