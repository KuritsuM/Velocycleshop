<div class="commentary">
  <div class="user-profile">
    <%= link_to image_tag(commentary.user.avatar, class: "avatar"), profile_path(commentary.user.id) %>
    <%= link_to commentary.user.username, profile_path(commentary.user.id) %>
  </div>
  <% if can? :update, commentary %><%= link_to '🖊', edit_commentary_path(id: commentary.id) %><% end %>
  <% if can? :destroy, commentary %><%= link_to '❌', commentary_path(id: commentary.id), method: :delete %>><% end %>
  <span class="commentary-text"><%= commentary.comment_text %></span>
</div>